{% schema %}
{
  "name": "Bundle Builder",
  "target": "section",
  "settings": []
}
{% endschema %}

<style>
.bundle-builder {
  margin: 2rem 0;
}

.size-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(150px, 1fr));
  gap: 1rem;
  margin: 1rem 0;
}

.size-option {
  border: 1px solid #ddd;
  border-radius: 4px;
  padding: 1rem;
  cursor: pointer;
  transition: all 0.2s ease;
}

.size-option.selected {
  border-color: #cc1417;
  background: #fff9f9;
}

.size-option__header {
  display: flex;
  align-items: flex-start;
  gap: 0.5rem;
  margin-bottom: 0.5rem;
}

.size-option__title {
  font-weight: 500;
  color: #333;
  flex-grow: 1;
}

.size-option__price {
  color: #cc1417;
  font-weight: 500;
}

.size-option__quantity {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  margin-top: 0.5rem;
}

.quantity-input {
  width: 60px;
  padding: 0.25rem;
  border: 1px solid #ddd;
  border-radius: 4px;
  text-align: center;
}

.quantity-input:disabled {
  background: #f5f5f5;
}

.stock-status {
  font-size: 0.85rem;
  margin-left: auto;
}

.stock-status--in {
  color: #2ecc71;
}

.stock-status--out {
  color: #e74c3c;
}

.total-price {
  font-size: 1.25rem;
  font-weight: 600;
  color: #cc1417;
  margin: 1rem 0;
  text-align: right;
}

.devis-button {
  display: inline-block;
  padding: 0.75rem 1.5rem;
  background: #f5f5f5;
  color: #666;
  text-decoration: none;
  border-radius: 4px;
  margin-top: 1rem;
  transition: background 0.2s ease;
}

.devis-button:hover {
  background: #ebebeb;
}

.section-title {
  font-size: 1.1rem;
  font-weight: 600;
  margin: 2rem 0 1rem;
  color: #333;
}
</style>

<div class="bundle-builder" data-bundle-builder>
  <div class="section-title">Sélectionnez la taille</div>
  <div class="size-grid">
    <div class="size-option" data-option>
      <div class="size-option__header">
        <input type="checkbox" name="size" value="30x30" data-price="34.85">
        <div class="size-option__title">30 x 30 mm</div>
        <div class="size-option__price">34.85 €</div>
      </div>
      <div class="size-option__quantity">
        <label>Qté:</label>
        <input type="number" class="quantity-input" value="1" min="1" disabled>
        <span class="stock-status stock-status--in">En stock</span>
      </div>
    </div>

    <div class="size-option" data-option>
      <div class="size-option__header">
        <input type="checkbox" name="size" value="30x35" data-price="36.85">
        <div class="size-option__title">30 x 35 mm</div>
        <div class="size-option__price">36.85 €</div>
      </div>
      <div class="size-option__quantity">
        <label>Qté:</label>
        <input type="number" class="quantity-input" value="1" min="1" disabled>
        <span class="stock-status stock-status--in">En stock</span>
      </div>
    </div>

    <div class="size-option" data-option>
      <div class="size-option__header">
        <input type="checkbox" name="size" value="35x35" data-price="38.85">
        <div class="size-option__title">35 x 35 mm</div>
        <div class="size-option__price">38.85 €</div>
      </div>
      <div class="size-option__quantity">
        <label>Qté:</label>
        <input type="number" class="quantity-input" value="1" min="1" disabled>
        <span class="stock-status stock-status--in">En stock</span>
      </div>
    </div>
  </div>

  <div class="total-price" data-total-price>
    Total: 0.00 €
  </div>

  <a href="#" class="devis-button">Ajouter au devis</a>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const bundleBuilder = document.querySelector('[data-bundle-builder]');
  const totalPriceElement = bundleBuilder.querySelector('[data-total-price]');
  
  function updateTotalPrice() {
    let total = 0;
    
    bundleBuilder.querySelectorAll('input[type="checkbox"]:checked').forEach(checkbox => {
      const price = parseFloat(checkbox.dataset.price);
      const quantity = parseInt(checkbox.closest('.size-option').querySelector('.quantity-input').value);
      total += price * quantity;
    });

    totalPriceElement.textContent = `Total: ${total.toFixed(2)} €`;
  }

  // Handle checkbox changes
  bundleBuilder.querySelectorAll('input[type="checkbox"]').forEach(checkbox => {
    checkbox.addEventListener('change', function() {
      const sizeOption = this.closest('.size-option');
      const quantityInput = sizeOption.querySelector('.quantity-input');
      
      sizeOption.classList.toggle('selected', this.checked);
      quantityInput.disabled = !this.checked;
      
      if (!this.checked) {
        quantityInput.value = 1;
      }
      
      updateTotalPrice();
    });
  });

  // Handle quantity changes
  bundleBuilder.querySelectorAll('.quantity-input').forEach(input => {
    input.addEventListener('change', updateTotalPrice);
  });
});
</script> 